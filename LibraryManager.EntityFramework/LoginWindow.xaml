<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManager.EntityFramework"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:uc="clr-namespace:LibraryManager.MyUserControl;assembly=LibraryManager.MyUserControl" x:Class="LibraryManager.EntityFramework.LoginWindow"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStyle="None"
        AllowsTransparency="True" ShowInTaskbar="True"
        Title="LoginWindow" WindowStartupLocation="CenterScreen"
        Height="502" Width="900">
    <Border BorderBrush="#007acc" BorderThickness="3">
        <Grid>
            <Image Source="/Resources/LoginWindowBackground.jpg" />
            <uc:TitleBar WindowMaximizeButton="False" Background="Transparent" HorizontalAlignment="Stretch" Height="auto" Margin="0,0,0,0" VerticalAlignment="Top"/>
            <materialDesign:Card Width="400" Margin="12.5,25,456.1,25">
                <Grid Margin="0">
                    <Grid.Resources>

                        <Style TargetType="{x:Type FrameworkElement}">
                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                        </Style>

                        <Style TargetType="materialDesign:PackIcon">
                            <Setter Property="Background" Value="{x:Null}"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Height" Value="32"/>
                            <Setter Property="Width" Value="32"/>
                        </Style>

                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedDarkButton}">
                            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="10"/>
                            <Setter Property="Background" Value="#001e51"/>
                            <Setter Property="VerticalAlignment" Value="Stretch"/>
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                            <Setter Property="Height" Value="60"/>
                        </Style>
                    </Grid.Resources>
                    <dragablz:TabablzControl FontSize="18" Margin="1 0 0 0" BorderBrush="Transparent" Background="White"
                                             Style="{StaticResource MaterialDesignTabablzControlStyle}">
                        <dragablz:TabablzControl.InterTabController>
                            <dragablz:InterTabController />
                        </dragablz:TabablzControl.InterTabController>
                        <TabItem Header="            LOG  IN            ">
                            <Grid>
                                <StackPanel Orientation="Vertical" Background="White">
                                    <Grid Margin="50 40 50 5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="32"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <materialDesign:PackIcon Grid.Column="0" Kind="Person"/>
                                        
                                        <TextBox Grid.Column="1" x:Name="tbxUsername"
                                                 Foreground="#001e51" MaxLength="20" Margin="20 0 0 0"
                                                 materialDesign:HintAssist.Foreground="#007acc" materialDesign:TextFieldAssist.UnderlineBrush="#007acc"
                                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                                 FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                            <materialDesign:HintAssist.Hint>
                                                <TextBlock Text="Username" Margin="0 -8 0 0" FontSize="20"/>
                                            </materialDesign:HintAssist.Hint>
                                        </TextBox>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                        <TabItem Header="            SIGN UP           ">
                            <Grid>
                                <StackPanel Orientation="Vertical" Background="White">
                                    <Grid Margin="50 40 50 5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="32"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <materialDesign:PackIcon Grid.Column="0" Kind="Person"/>

                                        <TextBox Grid.Column="1" x:Name="tbxUsername2"
                                                 Foreground="#001e51" MaxLength="20" Margin="20 0 0 0"
                                                 materialDesign:HintAssist.Foreground="#007acc" materialDesign:TextFieldAssist.UnderlineBrush="#007acc"
                                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                                 FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                            <materialDesign:HintAssist.Hint>
                                                <TextBlock Text="Username" Margin="0 -8 0 0" FontSize="20"/>
                                            </materialDesign:HintAssist.Hint>
                                        </TextBox>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                    </dragablz:TabablzControl>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Border>
</Window>
